@model MyBlog.Models.Comment

@{
    ViewData["Title"] = "Удалить комментарий";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить этот комментарий?</h3>
<div>
    <h4>Комментарий</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Текст
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
           Дата публикации
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishDate)
        </dd>
        <dt class="col-sm-2">
            Время публикации
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublishTime)
        </dd>
        <dt class = "col-sm-2">
           ID пользователя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUserId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.PostId">Назад к списку</a>
    </form>
</div>
